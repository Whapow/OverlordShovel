%div
  %div.titleBar
    %span
      = link_to "Back To Campaign List", :campaigns, class: "btn btn-primary pull-left"
      - if current_user == @campaign.owner
        =link_to "Edit Campaign Details", edit_campaign_path(@campaign), 'data-no-turbolink' => true, class: "btn btn-primary pull-right"
    %h2{style:"text-align:center"}="#{@campaign.name}"
%div
  %table{class: "table table-bordered", id:"chapters"}
  %thead
  %tbody
    %tr
      %td
        %h4= t(:chapters) 
    = t(:no_chapters) if @campaign.chapters.empty?
    = render 'chapters', chapters: @campaign.chapters.order("chapters.created_at")