%table{class: "table table-striped table-condensed table-hover"}
  %thead
    %tr
      %th= t(:character_name)
      %th= t(:reward_value)
      %th= t(:experience_value)
      %th
  %tbody
    - appearances.each do |appearance|
      %tr
        %td= appearance.character.name
        %td= appearance.reward_value
        %td= appearance.experience_value
        %td
          - if current_user.id == appearance.campaign.owner.id
            = link_to t(:delete), campaign_chapter_journal_appearance_path(@campaign, @chapter, journal, appearance), method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-danger pull-right"
            = link_to t(:edit), edit_campaign_chapter_journal_appearance_path(@campaign, @chapter, journal, appearance), class:"btn btn-info pull-right"
    %tr
      %td= link_to t(:add_character), new_campaign_chapter_journal_appearance_path(@campaign, @chapter, journal), 'data-no-turbolink' => true
      %td
      %td
      %td