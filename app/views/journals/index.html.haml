%table{class: "table table-striped table-condensed table-hover"}
  %thead
    %tr
      %th= t(:journal_name)
      %th= t(:campaign)
      %th
      %th
      %th{colspan: 5}
  %tbody
    - @journals.each do |journal|
      %tr
        %td= link_to journal.name, journal_path(journal.campaign), 'data-no-turbolink' => true
        %td= journal.campaign.name
        %td
          - if current_user == journal.campaign.owner
            = link_to t(:edit), edit_journal_path(journal.campaign), class:"btn btn-info pull-right"
        %td
          - if current_user == journal.campaign.owner
            = link_to t(:delete), journal_path(journal.campaign), method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-danger pull-left"
    %tr
      %td= link_to t(:add_journal), new_journal_path, 'data-no-turbolink' => true
      %td
      %td
      %td
      %td