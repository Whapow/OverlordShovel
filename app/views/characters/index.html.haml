%table{class: "table table-striped table-condensed table-hover"}
  %thead
    %tr
      %th= t(:character_name)
      %th= t(:player)
      %th= t(:campaign)
      %th
      %th
      %th{colspan: 5}
  %tbody
    - @characters.each do |character|
      %tr
        %td= link_to character.name, character_path(character), 'data-no-turbolink' => true
        %td= "#{character.player.first_name} #{character.player.last_name.first}"
        %td= character.campaign.try(:name)
        %td
          - if current_user == character.player
            = link_to t(:edit), edit_character_path(character), class:"btn btn-info pull-right"
        %td
          - if current_user == character.player
            = link_to t(:delete), character_path(character), method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-danger pull-left"
    %tr
      %td= link_to t(:add_character), new_character_path, 'data-no-turbolink' => true
      %td
      %td
      %td
      %td